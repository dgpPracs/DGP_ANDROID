<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/multimediaCV"
    android:background="@color/colorBlanco"
    android:backgroundTint="@color/colorBlanco"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="@color/colorBlanco">

    <LinearLayout
        android:id="@+id/multimedia_layout"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:background="@color/colorBlanco"
        android:layout_width="match_parent">

        <!--<VideoView-->
            <!--android:maxHeight="200dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:id="@+id/video_multimedia"-->
            <!--android:textAlignment="center"-->
            <!--android:visibility="visible"-->
            <!--android:foregroundGravity="center_horizontal|center"-->
            <!--android:layout_width="match_parent" />-->

        <ImageView
            android:maxHeight="80dp"
            android:adjustViewBounds="true"
            android:maxWidth="80dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:id="@+id/multimedia_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="80dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/multimedia_description"
                android:layout_toRightOf="@+id/panel_image"
                android:layout_alignParentTop="true"
                android:textSize="18sp"
                android:textColor="@color/cardview_dark_background"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/multimedia_lenght"
                    android:textSize="16sp"
                    android:textColor="@android:color/darker_gray"
                    android:foregroundGravity="right|top"
                    android:textAlignment="textStart" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnPlay"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlanco"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:background="@color/colorPrimary"
                    android:layout_alignParentRight="true"
                    android:padding="5dp" />


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>


