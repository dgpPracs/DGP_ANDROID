<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_first_settings"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation = "vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ferch.museo.FirstSettings">

    <LinearLayout
        android:orientation = "horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:paddingBottom="20dp"
        android:layout_gravity="center_vertical"
        >

        <ImageView
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="3"
            app:srcCompat="@mipmap/ic_main_logo" />

        <TextView
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:text="@string/welcome_message"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textAlignment="center"
            android:textSize="28sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_language"
        android:textColor="@android:color/darker_gray"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textAlignment="center"
        android:textSize="20sp" />

    <LinearLayout
        android:orientation = "horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginBottom="30dp"
        >

        <ImageButton
            android:id="@+id/btnPrevLang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_left"
            android:layout_weight="1"
            android:background="@color/colorBlanco"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="top"/>


        <TextSwitcher
            android:id="@+id/swchLanguage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />

        <ImageButton
            android:id="@+id/btnNextLang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_right"
            android:layout_weight="1"
            android:background="@color/colorBlanco"
            android:layout_gravity="top"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_feature"
        android:textColor="@android:color/darker_gray"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textAlignment="center"
        android:textSize="20sp" />

    <LinearLayout
        android:orientation = "horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginBottom="10dp"
        >

        <ImageButton
            android:id="@+id/btnPrevFeat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_left"
            android:layout_weight="1"
            android:background="@color/colorBlanco"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="top"/>

        <TextSwitcher
            android:id="@+id/swchFeatures"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_right"
            android:id="@+id/btnNextFeat"
            android:layout_weight="1"
            android:background="@color/colorBlanco"
            android:layout_gravity="top"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />

    </LinearLayout>

    <Button
        android:text="@string/btnGo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/btnGo"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="18sp"
        android:background="@color/colorPrimaryDark"
        android:layout_margin="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"/>

</LinearLayout>



